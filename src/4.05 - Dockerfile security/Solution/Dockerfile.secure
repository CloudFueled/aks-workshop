# ✅ Minimal base image to reduce attack surface
# ✅ Adds non-root user and switches to it
# ✅ Only copies necessary files for build
# ✅ Uses clean layering for smaller image size

FROM node:24-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install --only=production

COPY server.js .

# ✅ Create non-root user the Alpine way
RUN addgroup -S appuser && adduser -S -G appuser appuser \
  && chown -R appuser /app

USER appuser

EXPOSE 3000

CMD ["node", "server.js"]
